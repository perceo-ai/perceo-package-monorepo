# Temporal Cloud Configuration
PERCEO_TEMPORAL_ADDRESS=your-namespace.tmprl.cloud:7233
PERCEO_TEMPORAL_NAMESPACE=your-namespace.account-id
PERCEO_TEMPORAL_TASK_QUEUE=observer-engine

# Temporal TLS Configuration (for Temporal Cloud)
# Point these to your downloaded certificate files
PERCEO_TEMPORAL_TLS_CERT_PATH=/path/to/client.pem
PERCEO_TEMPORAL_TLS_KEY_PATH=/path/to/client-key.pem

# Perceo API Configuration (required for activities)
PERCEO_API_BASE_URL=https://api.perceo.dev
PERCEO_API_KEY=pk_live_your_api_key_here

# Neo4j Flow Graph (optional)
# Only needed if using flow graph features
PERCEO_NEO4J_URI=bolt://localhost:7687
PERCEO_NEO4J_DATABASE=neo4j
PERCEO_NEO4J_USERNAME=neo4j
PERCEO_NEO4J_PASSWORD=your_password

# Redis Event Bus (optional)
# Only needed if using event publishing
PERCEO_REDIS_URL=redis://localhost:6379

# Analytics Integration (optional)
ANALYTICS_CREDENTIALS={"project_id": "..."}
