{
	"name": "personas_assign",
	"strict": true,
	"schema": {
		"type": "object",
		"properties": {
			"personas": {
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"name": { "type": "string" },
						"description": { "type": "string" },
						"behaviors": {
							"type": "array",
							"items": { "type": "string" }
						},
						"flowNames": {
							"type": "array",
							"items": { "type": "string" },
							"description": "Names of flows this persona uses"
						}
					},
					"required": ["name", "description", "behaviors", "flowNames"],
					"additionalProperties": false
				}
			}
		},
		"required": ["personas"],
		"additionalProperties": false
	}
}
